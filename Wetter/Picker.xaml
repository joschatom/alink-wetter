<UserControl x:Class="Wetter.Picker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Wetter" 
             mc:Ignorable="d"
             Foreground="White"
             BorderBrush="White"
             Height="200" Width="200">


            <StackPanel Background="White" Orientation="Horizontal" Margin="-1,0,-100,0">
            <StackPanel.Resources>
                <Style TargetType="ListBox" >
                    <Setter Property="Foreground" Value="White"/>
                </Style>
                <Style TargetType="RibbonRadioButton" >
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="GroupName" Value="DaySel"/>
                </Style>
            </StackPanel.Resources>
            <Calendar Background="White" Height="170" 
                        BorderBrush="{x:Null}" x:Name="DateSel"
                        SelectedDatesChanged="DateSel_SelectedDatesChanged" Width="180"/>
            <ListView x:Name="Options" Height="170" Width="100" BorderBrush="{x:Null}" 
                          SelectionChanged="Options_SelectionChanged" SelectedIndex="0">
                <ListViewItem Content="Live"/>
            </ListView>
        </StackPanel>


</UserControl>
